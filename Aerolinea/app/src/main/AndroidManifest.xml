<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aerolinea">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_circle"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aerolinea"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity android:name=".View.ui.tiquete.TiqueteActivity"
            android:theme="@style/Theme.Aerolinea.NoActionBar"></activity>
        <activity
            android:name=".View.ui.asientos.asientos_vuelo"
            android:label="@string/title_activity_asientos_vuelo"
            android:theme="@style/Theme.Aerolinea.NoActionBar" />
        <activity
            android:name=".View.MainUserActivity"
            android:label="@string/title_activity_main_user"
            android:theme="@style/Theme.Aerolinea.NoActionBar" />

        <activity android:name=".login_register.Register" />
        <activity android:name=".login_register.Login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>