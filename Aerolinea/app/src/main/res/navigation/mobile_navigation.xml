<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.aerolinea.View.ui.home.HomeFragment"
        android:label="@string/vuelos"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.aerolinea.View.ui.gallery.GalleryFragment"
        android:label="@string/tiquetes"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.aerolinea.View.ui.slideshow.SlideshowFragment"
        android:label="@string/about_us"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.example.aerolinea.View.ui.perfil.PerfilFragment"
        android:label="@string/perfil"
        tools:layout="@layout/fragment_perfil" >
        <action
            android:id="@+id/action_perfilFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>


</navigation>