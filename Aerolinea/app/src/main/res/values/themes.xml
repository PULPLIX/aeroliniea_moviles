<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Aerolinea" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azulitoSecundary</item>
        <item name="colorPrimaryVariant">@color/blancoConOpacidad</item>
        <item name="colorOnPrimary">@color/azulitoSecundaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fuxia</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blancoConOpacidad</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Aerolinea.NoActionBar" parent="Theme.Aerolinea">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Aerolinea.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/blancoConOpacidad</item>
        <item name="android:textColorPrimary">@color/azulitoSecundaryColor</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/azulitoSecundaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/azulitoSecundaryColor</item>
    </style>

    <style name="Theme.Aerolinea.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="datePickerTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/azulitoSecundaryColor</item>
    </style>
    <style name="spinnerTheme">
        <item name="android:textColor">@color/azulitoSecundary</item>
        <item name="colorControlNormal">@color/azulitoSecundary</item>
        <item name="colorControlActivated">@color/verdecito</item>
    </style>

    <style name="Autocomplete">
        <item name="android:textColor">@color/azulitoSecundary</item>
        <item name="colorControlNormal">@color/azulitoSecundary</item>
        <item name="colorControlActivated">@color/verdecito</item>
    </style>
</resources>